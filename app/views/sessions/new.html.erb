<div class="mt-5">
  <h1>Login</h1>

  <%= form_with url: login_path, local: true, class: "mt-4" do %>
    <div class="mb-3">
      <%= label_tag :email, class: "form-label" %>
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= label_tag :password, class: "form-label" %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <div>
      <%= submit_tag "Login", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Sign Up', new_user_path, class: "btn btn-link" %>
</div>
