<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td>
          <% if book.available? %>
            Available
          <% else %>
            Borrowed
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
