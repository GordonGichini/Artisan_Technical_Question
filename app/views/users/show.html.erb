<h1>Welcome, <%= @user.name %></h1>

<h2>Your Borrowed Books</h2>
<% if @borrowings.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Due Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @borrowings.each do |borrowing| %>
        <tr>
          <td><%= borrowing.book.title %></td>
          <td><%= borrowing.due_date %></td>
          <td>
            <%= form_with url: return_borrowing_path(borrowing), method: :patch do %>
              <%= submit_tag "Return Book" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no borrowed books.</p>
<% end %>

<%= link_to 'Back to Books', books_path %>
