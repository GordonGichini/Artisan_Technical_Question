<div class="mt-5">
  <h1>Welcome, <%= @user.name %></h1>

  <h2 class="mt-4">Your Borrowed Books</h2>

  <% if @borrowings.any? %>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>Title</th>
          <th>Due Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @borrowings.each do |borrowing| %>
          <tr>
            <td><%= borrowing.book.title %></td>
            <td><%= borrowing.due_date %></td>
            <td>
              <%= form_with url: return_borrowing_path(borrowing), method: :patch, local: true do %>
                <%= submit_tag "Return Book", class: "btn btn-warning btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="mt-3">You have no borrowed books.</p>
  <% end %>

  <%= link_to 'Back to Books', books_path, class: "btn btn-secondary mt-3" %>
</div>
